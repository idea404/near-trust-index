  },
  "devDependencies": {
    "@nearfoundation/near-prettier-config": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "ava": "^4.3.3",
    "eslint": "^8.26.0",
    "eslint-config-near": "^1.0.3",
